<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    >


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="5dp"
        >

        <TextView
            android:id="@+id/yazarid"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/circleback"
            android:gravity="center"
            android:text="@string/denemeeeeee"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:textStyle="bold"
            android:textColor="@color/siyah"

            />


    </LinearLayout>

    <TextView
        android:id="@+id/yorumid"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/hayat_mda_yedi_im_en_g_zel_pizzayd_daha_iyi_bir_pizza_d_nemiyorum_te_ekk_rler"
        android:background="@color/colorPrimary"
        android:padding="2dp"
        android:textColor="@color/colorWhite"
        />


</LinearLayout>