<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".FragmentAddProduct">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="10dp"
        >

        <ImageView
            android:id="@+id/IMG1"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@drawable/addphoto"
            android:layout_margin="10dp"

            />
        <ImageView
            android:id="@+id/IMG2"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@drawable/addphoto"
            android:layout_margin="10dp"

            />
        <ImageView
            android:id="@+id/IMG3"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@drawable/addphoto"
            android:layout_margin="10dp"
            />


    </LinearLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="18dp"
    android:orientation="horizontal">
    <EditText
        android:id="@+id/txtBarcode2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:ems="8"
        android:hint="BARCODE"
        android:inputType="number" />

    <ImageView
        android:id="@+id/imgScan"
        android:layout_width="35dp"
        android:layout_height="42dp"
        android:layout_marginLeft="2dp"
        android:clickable="true"
        android:src="@drawable/ic_find_in_page_black_24dp" />
</LinearLayout>


    <EditText
        android:id="@+id/txProductName2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:ems="8"
        android:hint="Product Name" />

    <Spinner
        android:id="@+id/categorySpinner2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"></Spinner>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imProduct1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"/>
        <ImageView
            android:id="@+id/imProduct2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"/>
        <ImageView
            android:id="@+id/imProduct3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="80dp"
        android:text="Next" />

</LinearLayout>